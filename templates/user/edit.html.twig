{% extends 'base.html.twig' %}

{% block title %}Edytuj Profil{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/user/styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Edytuj Profil</h2>
            <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Powrót
            </a>
        </div>

        <div class="profile-section">
            <div class="profile-section-header">
                <h3 class="m-0"><i class="fas fa-edit me-2"></i>Edycja Profilu</h3>
            </div>
            <div class="profile-section-body">
                {{ form_start(form) }}
                <div class="form-section">
                    <div class="form-section-title">Dane Osobowe</div>
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            {{ form_label(form.firstName) }}
                            {{ form_widget(form.firstName) }}
                            {{ form_errors(form.firstName) }}
                        </div>
                        <div class="col-md-6 mb-4">
                            {{ form_label(form.lastName) }}
                            {{ form_widget(form.lastName) }}
                            {{ form_errors(form.lastName) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="col-md-6 mb-4">
                            {{ form_label(form.gender) }}
                            {{ form_widget(form.gender) }}
                            {{ form_errors(form.gender) }}
                        </div>
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.avatarUrl) }}
                        {{ form_widget(form.avatarUrl) }}
                        {{ form_errors(form.avatarUrl) }}

                        <div id="{{ form.avatarUrl.vars.id }}_preview_container" class="avatar-preview-container {% if not form.avatarUrl.vars.value %}d-none{% endif %}">
                            <img src="{{ form.avatarUrl.vars.value }}" id="avatar-preview" class="avatar-preview" alt="Podgląd zdjęcia">
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <div class="form-section-title">Zmiana Hasła</div>
                    <div class="mb-4">
                        {{ form_label(form.plainPassword) }}
                        {{ form_widget(form.plainPassword) }}
                        {{ form_errors(form.plainPassword) }}
                        <small class="form-text text-muted">Pozostaw puste, jeśli nie chcesz zmieniać hasła</small>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Anuluj
                    </a>
                    <button type="submit" class="btn btn-dark">
                        <i class="fas fa-save me-2"></i>Zapisz zmiany
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/user/edit.js') }}"></script>
{% endblock %}