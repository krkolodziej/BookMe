{% extends 'base.html.twig' %}

{% block title %}Wizyty Pracownika{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/booking/styles.css') }}">
{% endblock %}
{% block body %}
    <div class="container mt-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-calendar-check me-2"></i>Moje Wizyty (Pracownik)</h2>
        </div>

        <ul class="nav nav-tabs mb-4" id="bookingTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="upcoming-tab" data-bs-toggle="tab" data-bs-target="#upcoming" type="button" role="tab">
                    <i class="fas fa-calendar-day me-2"></i>Nadchodzące
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed" type="button" role="tab">
                    <i class="fas fa-calendar-check me-2"></i>Zakończone
                </button>
            </li>
        </ul>

        <div class="tab-content" id="bookingTabsContent">
            <div class="tab-pane fade show active" id="upcoming" role="tabpanel" aria-labelledby="upcoming-tab">
                <div class="row">
                    {% set upcomingBookings = bookings|filter(booking => booking.startTime >= currentTime) %}

                    {% if upcomingBookings|length > 0 %}
                        {% for booking in upcomingBookings %}
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="booking-card">
                                    <div class="booking-header">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h5 class="mb-0">{{ booking.service.name }}</h5>
                                            <span class="status-badge bg-primary">{{ booking.startTime|date('d.m.Y') }}</span>
                                        </div>
                                    </div>
                                    <div class="booking-body">
                                        <div class="booking-info">
                                            <div class="booking-info-label">Usługa:</div>
                                            <div>{{ booking.offer.name }} ({{ booking.offer.duration }} min)</div>
                                        </div>
                                        <div class="booking-info">
                                            <div class="booking-info-label">Cena:</div>
                                            <div>{{ booking.offer.price }} zł</div>
                                        </div>
                                        <div class="booking-info">
                                            <div class="booking-info-label">Termin:</div>
                                            <div>{{ booking.startTime|date('d.m.Y H:i') }} - {{ booking.endTime|date('H:i') }}</div>
                                        </div>
                                        <div class="booking-info">
                                            <div class="booking-info-label">Klient:</div>
                                            <div>
                                                {% if booking.user %}
                                                    {{ booking.user.firstName }} {{ booking.user.lastName }}
                                                {% else %}
                                                    <span class="text-muted">Nie przypisano</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="col-12">
                            <div class="empty-state">
                                <div class="empty-state-icon">
                                    <i class="far fa-calendar-times"></i>
                                </div>
                                <h4>Brak nadchodzących wizyt</h4>
                                <p class="text-muted">Nie masz żadnych nadchodzących wizyt do obsługi.</p>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="tab-pane fade" id="completed" role="tabpanel" aria-labelledby="completed-tab">
                <div class="row">
                    {% set completedBookings = bookings|filter(booking => booking.startTime < currentTime) %}

                    {% if completedBookings|length > 0 %}
                        {% for booking in completedBookings %}
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="booking-card">
                                    <div class="booking-header">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h5 class="mb-0">{{ booking.service.name }}</h5>
                                            <span class="status-badge bg-secondary">{{ booking.startTime|date('d.m.Y') }}</span>
                                        </div>
                                    </div>
                                    <div class="booking-body">
                                        <div class="booking-info">
                                            <div class="booking-info-label">Usługa:</div>
                                            <div>{{ booking.offer.name }} ({{ booking.offer.duration }} min)</div>
                                        </div>
                                        <div class="booking-info">
                                            <div class="booking-info-label">Cena:</div>
                                            <div>{{ booking.offer.price }} zł</div>
                                        </div>
                                        <div class="booking-info">
                                            <div class="booking-info-label">Termin:</div>
                                            <div>{{ booking.startTime|date('d.m.Y H:i') }} - {{ booking.endTime|date('H:i') }}</div>
                                        </div>
                                        <div class="booking-info">
                                            <div class="booking-info-label">Klient:</div>
                                            <div>
                                                {% if booking.user %}
                                                    {{ booking.user.firstName }} {{ booking.user.lastName }}
                                                {% else %}
                                                    <span class="text-muted">Nie przypisano</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                        
                                        {% if booking.opinion %}
                                            <div class="opinion-content mt-3">
                                                <h6 class="mb-2">Opinia klienta:</h6>
                                                <div class="mb-2">
                                                    <div class="d-flex align-items-center">
                                                        <strong class="me-2">Ocena:</strong>
                                                        <div class="d-flex align-items-center">
                                                            {% for i in 1..5 %}
                                                                <i class="{{ i <= booking.opinion.rating ? 'fas fa-star star-rating' : 'far fa-star star-empty' }} me-1"></i>
                                                            {% endfor %}
                                                            <span class="ms-1">{{ booking.opinion.rating }}/5</span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div>
                                                    <strong>Treść:</strong>
                                                    <p class="mb-0">{{ booking.opinion.content }}</p>
                                                </div>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="col-12">
                            <div class="empty-state">
                                <div class="empty-state-icon">
                                    <i class="far fa-calendar-check"></i>
                                </div>
                                <h4>Brak zakończonych wizyt</h4>
                                <p class="text-muted">Nie masz żadnych zakończonych wizyt.</p>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/booking/index.js') }}"></script>
{% endblock %}
