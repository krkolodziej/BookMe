{% set current_route = app.request.attributes.get('_route') %}
{% set is_notification_page = current_route == 'notifications_index' %}

{% if is_notification_page %}
<div class="p-3 text-center">
    <span class="text-muted">Jesteś już na stronie powiadomień</span>
</div>
{% else %}
<div class="dropdown-header d-flex justify-content-between align-items-center py-2 px-3 bg-light">
    <h6 class="mb-0 fw-semibold text-dark">Powiadomienia</h6>
    {% if notifications|length > 0 %}
        <a href="{{ path('notifications_index') }}" class="small text-primary text-decoration-none">
            Zobacz wszystkie
        </a>
    {% endif %}
</div>
{% endif %}

{% if notifications|length == 0 %}
    <div class="dropdown-item-text text-center py-4">
        <i class="fas fa-bell-slash fa-2x text-muted mb-2"></i>
        <div class="small text-muted">Brak nowych powiadomień</div>
    </div>
{% else %}
    <div class="notifications-dropdown-list" style="max-height: 400px; overflow-y: auto;">
        {% for notification in notifications %}
            <div class="dropdown-item notification-dropdown-item {% if not notification.isRead %}bg-light{% endif %} p-3" 
                 data-notification-id="{{ notification.id }}"
                 style="white-space: normal; cursor: pointer;">
                <div class="d-flex align-items-start">
                    <div class="me-3 mt-1">
                        <div class="rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center" 
                             style="width: 32px; height: 32px;">
                            <i class="fas fa-info-circle text-primary small"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1">
                        <div class="d-flex justify-content-between align-items-start mb-1">
                            <div class="fw-semibold small text-dark">
                                {% if not notification.isRead %}
                                    <span class="badge bg-primary rounded-pill me-1" style="font-size: 0.5rem;">NOWE</span>
                                {% endif %}
                                Powiadomienie
                            </div>
                            <small class="text-muted">{{ notification.createdAt|date('H:i') }}</small>
                        </div>
                        <p class="mb-1 small text-dark" style="line-height: 1.3;">
                            {{ notification.message|length > 80 ? notification.message|slice(0, 80) ~ '...' : notification.message }}
                        </p>
                        <small class="text-muted">{{ notification.createdAt|date('d.m.Y') }}</small>
                    </div>
                </div>
            </div>
            
            {% if not loop.last %}
                <div class="dropdown-divider my-0"></div>
            {% endif %}
        {% endfor %}
    </div>

    <div class="dropdown-divider my-0"></div>
    <div class="dropdown-footer p-2">
        <div class="d-flex justify-content-between">
            <button class="btn btn-sm btn-outline-primary flex-fill me-2" id="markAllReadDropdown">
                <i class="fas fa-check-double me-1"></i>
                Oznacz wszystkie
            </button>
            <a href="{{ path('notifications_index') }}" class="btn btn-sm btn-primary flex-fill">
                <i class="fas fa-list me-1"></i>
                Zobacz wszystkie
            </a>
        </div>
    </div>
{% endif %}