{% extends 'base.html.twig' %}

{% block title %}Zarządzanie Opiniami - {{ service.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admin/opinion/styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Zarządzanie Opiniami - {{ service.name }}</h2>
            <a href="{{ path('admin_service_edit', {'encodedName': encodedName}) }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Powrót do Serwisu
            </a>
        </div>

        <div class="admin-section">
            <div class="admin-section-header d-flex justify-content-between align-items-center">
                <h3 class="m-0"><i class="fas fa-star me-2"></i>Opinie Klientów</h3>
                <a href="{{ path('admin_opinion_create', {'encodedName': encodedName}) }}" class="btn btn-light btn-sm">
                    <i class="fas fa-plus me-1"></i>Dodaj Opinię
                </a>
            </div>

            <div class="admin-section-body">
                {% if opinions|length > 0 %}
                    <div class="filters-bar">
                        <div class="search-box">
                            <i class="fas fa-search search-icon"></i>
                            <input type="text" id="opinionSearch" class="form-control search-input" placeholder="Szukaj...">
                        </div>
                        <div class="d-flex align-items-center">
                            <span class="me-2">Łącznie opinii: {{ total }}</span>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table-custom" id="opinionTable">
                            <thead>
                            <tr>
                                <th style="width: 15%;">Użytkownik</th>
                                <th style="width: 10%;">
                                    Ocena
                                    <a href="{{ path('admin_opinion_index', {'encodedName': encodedName, 'sort': sort == 'rating' ? '-rating' : 'rating'}) }}" class="sort-link">
                                        <i class="fas fa-sort sort-icon"></i>
                                    </a>
                                </th>
                                <th style="width: 30%;">Treść</th>
                                <th style="width: 15%;">Pracownik</th>
                                <th style="width: 15%;">Oferta</th>
                                <th style="width: 15%;">
                                    Data
                                    <a href="{{ path('admin_opinion_index', {'encodedName': encodedName, 'sort': sort == 'createdAt' ? '-createdAt' : 'createdAt'}) }}" class="sort-link">
                                        <i class="fas fa-sort sort-icon"></i>
                                    </a>
                                </th>
                                <th style="width: 10%;">Akcje</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for opinion in opinions %}
                                <tr>
                                    <td title="{{ opinion.firstName }} {{ opinion.lastName }}">
                                        {{ opinion.firstName }} {{ opinion.lastName }}
                                    </td>
                                    <td>
                                        <div class="rating-stars">
                                            {% for i in 1..5 %}
                                                {% if i <= opinion.rating %}
                                                    <i class="fas fa-star"></i>
                                                {% else %}
                                                    <i class="far fa-star"></i>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    </td>
                                    <td>
                                        <div class="truncate" title="{{ opinion.content }}">
                                            {{ opinion.content|slice(0, 50) ~ (opinion.content|length > 50 ? '...' : '') }}
                                        </div>
                                    </td>
                                    <td>{{ opinion.employeeFullName ?: 'Brak' }}</td>
                                    <td>{{ opinion.offerName }}</td>
                                    <td>{{ opinion.createdAt }}</td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="{{ path('admin_opinion_edit', {'encodedName': encodedName, 'id': opinion.id}) }}" class="btn btn-outline-dark btn-sm action-btn" title="Edytuj">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form action="{{ path('admin_opinion_delete', {'encodedName': encodedName, 'id': opinion.id}) }}" method="post" onsubmit="return confirm('Czy na pewno chcesz usunąć tę opinię?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ opinion.id) }}">
                                                <button type="submit" class="btn btn-danger btn-sm action-btn" title="Usuń">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {% if totalPages > 1 %}
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                {% if currentPage > 1 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('admin_opinion_index', {'encodedName': encodedName, 'page': currentPage - 1, 'sort': sort}) }}" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                {% endif %}

                                {% for i in 1..totalPages %}
                                    <li class="page-item {{ currentPage == i ? 'active' : '' }}">
                                        <a class="page-link" href="{{ path('admin_opinion_index', {'encodedName': encodedName, 'page': i, 'sort': sort}) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}

                                {% if currentPage < totalPages %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('admin_opinion_index', {'encodedName': encodedName, 'page': currentPage + 1, 'sort': sort}) }}" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                {% endif %}
                            </ul>
                        </nav>
                    {% endif %}
                {% else %}
                    <div class="no-opinions">
                        <p><i class="fas fa-info-circle me-2"></i>Brak opinii dla tego serwisu</p>
                        <a href="{{ path('admin_opinion_new', {'encodedName': encodedName}) }}" class="btn btn-dark mt-3">
                            <i class="fas fa-plus me-2"></i>Dodaj Pierwszą Opinię
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        const tableConfig = {
            tableId: 'opinionTable',
            searchInputId: 'opinionSearch'
        };
    </script>
    <script src="{{ asset('js/admin/opinion/index.js') }}"></script>
{% endblock %}