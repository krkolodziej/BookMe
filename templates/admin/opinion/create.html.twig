{% extends 'base.html.twig' %}

{% block title %}Dodaj Nową Opinię - {{ service.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admin/opinion/styles.css') }}">
    <style>
        /* Ukryj standardowe radiobuttony dla oceny */
        div[id$="_rating"] {
            display: none !important;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Dodaj Nową Opinię - {{ service.name }}</h2>
            <a href="{{ path('admin_opinion_index', {'encodedName': encodedName}) }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Powrót do Listy Opinii
            </a>
        </div>

        <div class="admin-section">
            <div class="admin-section-header">
                <h3 class="m-0"><i class="fas fa-plus me-2"></i>Nowa Opinia</h3>
            </div>
            <div class="admin-section-body">
                {{ form_start(form) }}
                
                <div class="mb-4">
                    {{ form_label(form.booking) }}
                    {{ form_widget(form.booking) }}
                    {{ form_errors(form.booking) }}
                    <small class="form-text text-muted">Wybierz wizytę, której dotyczy opinia</small>
                </div>

                <div id="bookingInfo" class="booking-info">
                    <div class="row">
                        <div class="col-md-6">
                            <p><span class="detail-label">Klient:</span> <span id="clientName" class="detail-value"></span></p>
                            <p><span class="detail-label">Oferta:</span> <span id="offerName" class="detail-value"></span></p>
                        </div>
                        <div class="col-md-6">
                            <p><span class="detail-label">Pracownik:</span> <span id="employeeName" class="detail-value"></span></p>
                            <p><span class="detail-label">Data wizyty:</span> <span id="bookingDate" class="detail-value"></span></p>
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    {{ form_label(form.content) }}
                    {{ form_widget(form.content, {'attr': {'rows': 5, 'placeholder': 'Wprowadź treść opinii...'}}) }}
                    {{ form_errors(form.content) }}
                </div>

                <!-- Wyświetlamy ukryte radiobuttony z etykietą -->
                <div class="mb-4">
                    {{ form_label(form.rating) }}
                    <!-- To jest ukryte przez CSS, ale nadal istnieje w DOM -->
                    {{ form_widget(form.rating) }}
                    {{ form_errors(form.rating) }}
                    
                    <!-- Niestandardowe gwiazdki jako widoczny element UI -->
                    <div class="pure-stars-rating">
                        <div class="stars-container">
                            <span class="star" data-value="5"><i class="fas fa-star"></i></span>
                            <span class="star" data-value="4"><i class="fas fa-star"></i></span>
                            <span class="star" data-value="3"><i class="fas fa-star"></i></span>
                            <span class="star" data-value="2"><i class="fas fa-star"></i></span>
                            <span class="star" data-value="1"><i class="fas fa-star"></i></span>
                        </div>
                    </div>
                </div>

                <!-- Renderujemy pozostałe pola formularza i token CSRF -->
                {{ form_rest(form) }}

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('admin_opinion_index', {'encodedName': encodedName}) }}" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Anuluj
                    </a>
                    <button type="submit" class="btn btn-dark">
                        <i class="fas fa-save me-2"></i>Zapisz opinię
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        const ratingConfig = {
            inputId: 'opinion_rating_value',
            defaultRating: 5
        };
        const bookingConfig = {
            selectId: '{{ form.booking.vars.id }}'
        };
    </script>
    <script src="{{ asset('js/admin/opinion/create.js') }}"></script>
    <script>
        // Zmieniony sposób pobierania informacji o pracowniku
        document.addEventListener('DOMContentLoaded', function() {
            const bookingSelect = document.getElementById('{{ form.booking.vars.id }}');
            
            if (bookingSelect) {
                bookingSelect.addEventListener('change', function() {
                    if (this.value) {
                        const selectedOption = this.options[this.selectedIndex];
                        const selectedText = selectedOption.text;
                        const parts = selectedText.split(' - ');
                        
                        // Pobierz dane klienta, oferty i daty
                        const clientName = parts.length >= 3 ? parts.slice(0, parts.length - 2).join(' - ') : parts[0];
                        const offerName = parts.length >= 2 ? parts[parts.length - 2] : '';
                        const bookingDate = parts.length >= 3 ? parts[parts.length - 1] : '';
                        
                        // Pobierz informację o pracowniku z atrybutu data-employee
                        const employeeInfo = selectedOption.getAttribute('data-employee');
                        
                        // Aktualizuj elementy DOM
                        document.getElementById('clientName').textContent = clientName;
                        document.getElementById('offerName').textContent = offerName;
                        document.getElementById('bookingDate').textContent = bookingDate;
                        document.getElementById('employeeName').textContent = employeeInfo || 'Brak danych o pracowniku';
                    }
                });
            }
        });
    </script>
{% endblock %}