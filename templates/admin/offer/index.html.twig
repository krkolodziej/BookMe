{% extends 'base.html.twig' %}

{% block title %}Zarządzanie Ofertami - {{ service.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admin/offer/styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Zarządzanie Ofertami - {{ service.name }}</h2>
            <a href="{{ path('admin_service_edit', {'encodedName': encodedName}) }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Powrót do Serwisu
            </a>
        </div>

        <div class="admin-section">
            <div class="admin-section-header d-flex justify-content-between align-items-center">
                <h3 class="m-0"><i class="fas fa-tags me-2"></i>Oferty Serwisu</h3>
                <a href="{{ path('admin_offer_create', {'encodedName': encodedName}) }}" class="btn btn-light btn-sm">
                    <i class="fas fa-plus me-1"></i>Dodaj Ofertę
                </a>
            </div>

            <div class="admin-section-body">
                {% if offers|length > 0 %}
                    <div class="filters-bar">
                        <div class="search-box">
                            <i class="fas fa-search search-icon"></i>
                            <input type="text" id="offerSearch" class="form-control search-input" placeholder="Szukaj...">
                        </div>
                        <div class="d-flex align-items-center">
                            <span class="me-2">Łącznie ofert: {{ total }}</span>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table-custom" id="offerTable">
                            <thead>
                            <tr>
                                <th style="width: 40%;">
                                    Nazwa
                                    <a href="{{ path('admin_offer_index', {'encodedName': encodedName, 'sort': 'name', 'direction': direction == 'asc' and sort == 'name' ? 'desc' : 'asc'}) }}" class="sort-link">
                                        <i class="fas fa-sort sort-icon"></i>
                                    </a>
                                </th>
                                <th style="width: 20%;">
                                    Czas Trwania
                                    <a href="{{ path('admin_offer_index', {'encodedName': encodedName, 'sort': 'duration', 'direction': direction == 'asc' and sort == 'duration' ? 'desc' : 'asc'}) }}" class="sort-link">
                                        <i class="fas fa-sort sort-icon"></i>
                                    </a>
                                </th>
                                <th style="width: 20%;">
                                    Cena
                                    <a href="{{ path('admin_offer_index', {'encodedName': encodedName, 'sort': 'price', 'direction': direction == 'asc' and sort == 'price' ? 'desc' : 'asc'}) }}" class="sort-link">
                                        <i class="fas fa-sort sort-icon"></i>
                                    </a>
                                </th>
                                <th style="width: 20%;">Akcje</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for offer in offers %}
                                <tr>
                                    <td>{{ offer.name }}</td>
                                    <td>{{ offer.duration }} min</td>
                                    <td>{{ offer.price|number_format(2, ',', ' ') }} zł</td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="{{ path('admin_offer_edit', {'encodedName': encodedName, 'id': offer.id}) }}" class="btn btn-outline-dark btn-sm action-btn" title="Edytuj">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form action="{{ path('admin_offer_delete', {'encodedName': encodedName, 'id': offer.id}) }}" method="post" onsubmit="return confirm('Czy na pewno chcesz usunąć tę ofertę?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offer.id) }}">
                                                <button type="submit" class="btn btn-danger btn-sm action-btn" title="Usuń">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {% if totalPages > 1 %}
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                {% if currentPage > 1 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('admin_offer_index', {'encodedName': encodedName, 'page': currentPage - 1, 'sort': sort, 'direction': direction}) }}" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                {% endif %}

                                {% for i in 1..totalPages %}
                                    <li class="page-item {{ currentPage == i ? 'active' : '' }}">
                                        <a class="page-link" href="{{ path('admin_offer_index', {'encodedName': encodedName, 'page': i, 'sort': sort, 'direction': direction}) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}

                                {% if currentPage < totalPages %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('admin_offer_index', {'encodedName': encodedName, 'page': currentPage + 1, 'sort': sort, 'direction': direction}) }}" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                {% endif %}
                            </ul>
                        </nav>
                    {% endif %}
                {% else %}
                    <div class="no-offers">
                        <p><i class="fas fa-info-circle me-2"></i>Brak ofert dla tego serwisu</p>
                        <a href="{{ path('admin_offer_create', {'encodedName': encodedName}) }}" class="btn btn-dark mt-3">
                            <i class="fas fa-plus me-2"></i>Dodaj Pierwszą Ofertę
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        const tableConfig = {
            tableId: 'offerTable',
            searchInputId: 'offerSearch'
        };
    </script>
    <script src="{{ asset('js/admin/offer/index.js') }}"></script>
{% endblock %}