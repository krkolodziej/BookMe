{% extends 'base.html.twig' %}

{% block title %}Dodaj Nową Ofertę - {{ service.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admin/offer/styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Dodaj Nową Ofertę - {{ service.name }}</h2>
            <a href="{{ path('admin_offer_index', {'encodedName': encodedName}) }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Powrót do Listy Ofert
            </a>
        </div>

        <div class="admin-section">
            <div class="admin-section-header">
                <h3 class="m-0"><i class="fas fa-plus me-2"></i>Nowa Oferta</h3>
            </div>
            <div class="admin-section-body">
                {{ form_start(form) }}
                <div class="mb-4">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="row">
                    <div class="col-md-6 mb-4">
                        {{ form_label(form.duration) }}
                        {{ form_widget(form.duration) }}
                        {{ form_errors(form.duration) }}
                        <small class="form-text text-muted">Czas trwania w minutach</small>
                    </div>
                    <div class="col-md-6 mb-4">
                        {{ form_label(form.price) }}
                        {{ form_widget(form.price) }}
                        {{ form_errors(form.price) }}
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('admin_offer_index', {'encodedName': encodedName}) }}" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Anuluj
                    </a>
                    <button type="submit" class="btn btn-dark">
                        <i class="fas fa-save me-2"></i>Zapisz ofertę
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}