{% extends 'base.html.twig' %}

{% block title %}Zarządzanie Wizytami - {{ service.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admin/booking/styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-calendar-check me-2"></i>Wizyty - {{ service.name }}</h2>
            <div>
                <a href="{{ path('admin_service_edit', {'encodedName': service.encodedName}) }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Powrót do Serwisu
                </a>
            </div>
        </div>

        <div class="actions-container">
            <div class="d-flex justify-content-between align-items-center">
                <p class="mb-0">Lista nadchodzących wizyt w serwisie.</p>
                <a href="{{ path('admin_service_bookings_new', {'encodedName': service.encodedName}) }}" class="btn btn-dark">
                    <i class="fas fa-plus me-2"></i>Dodaj Nową Wizytę
                </a>
            </div>
        </div>

        {% if bookings|length > 0 %}
            <div class="row">
                {% for booking in bookings %}
                    <div class="col-md-6 col-lg-4">
                        <div class="booking-card">
                            <div class="booking-header">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">{{ booking.offer.name }}</h5>
                                    <span class="status-badge bg-primary">{{ booking.startTime|date('d.m.Y') }}</span>
                                </div>
                            </div>
                            <div class="booking-body">
                                <div class="booking-info">
                                    <div class="booking-info-label">Klient:</div>
                                    <div>{{ booking.user.firstName }} {{ booking.user.lastName }}</div>
                                </div>
                                <div class="booking-info">
                                    <div class="booking-info-label">Termin:</div>
                                    <div>{{ booking.startTime|date('d.m.Y H:i') }} - {{ booking.endTime|date('H:i') }}</div>
                                </div>
                                <div class="booking-info">
                                    <div class="booking-info-label">Pracownik:</div>
                                    <div>
                                        {% if booking.employee %}
                                            {{ booking.employee.user.firstName }} {{ booking.employee.user.lastName }}
                                        {% else %}
                                            <span class="text-muted">Nie przypisano</span>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="booking-info">
                                    <div class="booking-info-label">Usługa:</div>
                                    <div>{{ booking.offer.name }} ({{ booking.offer.duration }} min, {{ booking.offer.price }} zł)</div>
                                </div>
                            </div>
                            <div class="booking-footer">
                                <div class="d-flex justify-content-between">
                                    <a href="{{ path('admin_service_bookings_edit', {'encodedName': service.encodedName, 'id': booking.id}) }}" class="btn btn-sm btn-dark">
                                        <i class="fas fa-edit me-1"></i>Edytuj
                                    </a>
                                    <form action="{{ path('admin_service_bookings_delete', {'encodedName': service.encodedName, 'id': booking.id}) }}" method="post" onsubmit="return confirm('Czy na pewno chcesz usunąć tę wizytę?');" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash me-1"></i>Usuń
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="far fa-calendar-times"></i>
                </div>
                <h4>Brak nadchodzących wizyt</h4>
                <p class="text-muted">Nie znaleziono żadnych nadchodzących wizyt dla tego serwisu.</p>
                <a href="{{ path('admin_service_bookings_new', {'encodedName': service.encodedName}) }}" class="btn btn-dark mt-3">
                    <i class="fas fa-plus me-2"></i>Dodaj Pierwszą Wizytę
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}