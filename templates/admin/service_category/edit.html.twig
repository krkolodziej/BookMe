{% extends 'base.html.twig' %}

{% block title %}Edytuj Kategorię{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admin/service_category/styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <h2 class="mb-4 text-center">Edytuj Kategorię</h2>

        <div class="admin-section">
            <div class="admin-section-header">
                <h3 class="m-0"><i class="fas fa-edit me-2"></i>{{ category.name }}</h3>
            </div>
            <div class="admin-section-body">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.imageUrl) }}
                    {{ form_widget(form.imageUrl) }}
                    {{ form_errors(form.imageUrl) }}
                </div>

                <div id="image-preview-container" class="text-center mt-4 {% if not category.imageUrl %}d-none{% endif %}">
                    <h5 class="mb-3">Podgląd obrazu:</h5>
                    <img src="{{ category.imageUrl }}" alt="Podgląd obrazu" id="image-preview" class="preview-image">
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('admin_service_category_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Powrót
                    </a>
                    <button type="submit" class="btn btn-dark">
                        <i class="fas fa-save me-2"></i>Zapisz zmiany
                    </button>
                </div>
                {{ form_end(form) }}

                {% if category.services|length > 0 %}
                    <div class="card card-related-services">
                        <div class="card-header">
                            <i class="fas fa-link me-2"></i>Powiązane Serwisy ({{ category.services|length }})
                        </div>
                        <div class="card-body">
                            {% for service in category.services %}
                                <a href="{{ path('admin_service_edit', {'encodedName': service.encodedName}) }}" class="badge bg-dark text-white badge-service">
                                    {{ service.name }}
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        const imageConfig = {
            inputId: '{{ form.imageUrl.vars.id }}',
            previewContainerId: 'image-preview-container',
            currentImageUrl: '{{ category.imageUrl }}'
        };
    </script>
    <script src="{{ asset('js/admin/service_category/edit.js') }}"></script>
{% endblock %}