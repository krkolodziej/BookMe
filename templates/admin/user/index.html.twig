{% extends 'base.html.twig' %}

{% block title %}Zarządzanie Użytkownikami{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admin/user/styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Zarządzanie Użytkownikami</h2>
            <a href="{{ path('admin_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Powrót do Panelu Administracyjnego
            </a>
        </div>

        <div class="admin-section">
            <div class="admin-section-header d-flex justify-content-between align-items-center">
                <h3 class="m-0"><i class="fas fa-users me-2"></i>Lista Użytkowników</h3>
                <a href="{{ path('admin_user_create') }}" class="btn btn-light btn-sm">
                    <i class="fas fa-plus me-1"></i>Dodaj Użytkownika
                </a>
            </div>

            <div class="admin-section-body">
                {% if users|length > 0 %}
                    <div class="filters-bar">
                        <form action="{{ path('admin_user_index') }}" method="get" class="d-flex align-items-center">
                            <div class="search-box position-relative" style="width: 250px;">
                                <i class="fas fa-search search-icon position-absolute" style="left: 12px; top: 50%; transform: translateY(-50%); color: #aaa;"></i>
                                <input type="text" name="search" value="{{ searchTerm }}" class="form-control search-input ps-5" placeholder="Szukaj...">
                                <span class="search-label position-absolute" style="left: 40px; top: 50%; transform: translateY(-50%); color: #aaa; pointer-events: none; display: none;">Szukaj</span>
                            </div>
                            <button type="submit" class="btn btn-dark ms-2">Szukaj</button>
                            {% if searchTerm %}
                                <a href="{{ path('admin_user_index') }}" class="btn btn-outline-secondary ms-2">Wyczyść</a>
                            {% endif %}
                        </form>
                        <div class="d-flex align-items-center">
                            <span class="me-2">Łącznie użytkowników: {{ total }}</span>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table-custom" id="userTable">
                            <thead>
                            <tr>
                                <th style="width: 30%;">
                                    Imię i Nazwisko
                                    <a href="{{ path('admin_user_index', {'search': searchTerm, 'sort': 'lastName', 'direction': direction == 'asc' and sort == 'lastName' ? 'desc' : 'asc'}) }}" class="sort-link">
                                        <i class="fas fa-sort sort-icon"></i>
                                    </a>
                                </th>
                                <th style="width: 25%;">
                                    Email
                                    <a href="{{ path('admin_user_index', {'search': searchTerm, 'sort': 'email', 'direction': direction == 'asc' and sort == 'email' ? 'desc' : 'asc'}) }}" class="sort-link">
                                        <i class="fas fa-sort sort-icon"></i>
                                    </a>
                                </th>
                                <th style="width: 15%;">Płeć</th>
                                <th style="width: 15%;">Status</th>
                                <th style="width: 15%;">Akcje</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td class="text-start">
                                        <div class="user-name">
                                            <img src="{{ user.avatarUrl ?: 'https://via.placeholder.com/40' }}" alt="{{ user.firstName }} {{ user.lastName }}" class="user-avatar">
                                            <span>{{ user.firstName }} {{ user.lastName }}</span>
                                        </div>
                                    </td>
                                    <td>{{ user.email }}</td>
                                    <td>
                                        {% if user.gender == 'male' %}
                                            <i class="fas fa-mars gender-icon"></i> Mężczyzna
                                        {% elseif user.gender == 'female' %}
                                            <i class="fas fa-venus gender-icon"></i> Kobieta
                                        {% else %}
                                            <i class="fas fa-genderless gender-icon"></i> Inna
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if user.isAdmin %}
                                            <span class="badge bg-danger"><i class="fas fa-user-shield me-1"></i> Administrator</span>
                                        {% else %}
                                            <span>Użytkownik</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-outline-dark btn-sm action-btn" title="Edytuj">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form action="{{ path('admin_user_delete', {'id': user.id}) }}" method="post" onsubmit="return confirm('Czy na pewno chcesz usunąć tego użytkownika?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                <button type="submit" class="btn btn-danger btn-sm action-btn" title="Usuń">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {% if totalPages > 1 %}
                        <nav aria-label="Page navigation">
                            <ul class="pagination">
                                {% if currentPage > 1 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('admin_user_index', {'search': searchTerm, 'page': currentPage - 1, 'sort': sort, 'direction': direction}) }}" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                {% endif %}

                                {% set startPage = max(1, currentPage - 2) %}
                                {% set endPage = min(totalPages, startPage + 4) %}

                                {% if startPage > 1 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('admin_user_index', {'search': searchTerm, 'page': 1, 'sort': sort, 'direction': direction}) }}">1</a>
                                    </li>
                                    {% if startPage > 2 %}
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    {% endif %}
                                {% endif %}

                                {% for i in startPage..endPage %}
                                    <li class="page-item {{ currentPage == i ? 'active' : '' }}">
                                        <a class="page-link" href="{{ path('admin_user_index', {'search': searchTerm, 'page': i, 'sort': sort, 'direction': direction}) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}

                                {% if endPage < totalPages %}
                                    {% if endPage < totalPages - 1 %}
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    {% endif %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('admin_user_index', {'search': searchTerm, 'page': totalPages, 'sort': sort, 'direction': direction}) }}">{{ totalPages }}</a>
                                    </li>
                                {% endif %}

                                {% if currentPage < totalPages %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('admin_user_index', {'search': searchTerm, 'page': currentPage + 1, 'sort': sort, 'direction': direction}) }}" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                {% endif %}
                            </ul>
                        </nav>
                    {% endif %}
                {% else %}
                    <div class="no-users">
                        <p><i class="fas fa-info-circle me-2"></i>Brak użytkowników spełniających kryteria wyszukiwania</p>
                        <a href="{{ path('admin_user_create') }}" class="btn btn-dark mt-3">
                            <i class="fas fa-plus me-2"></i>Dodaj Użytkownika
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}