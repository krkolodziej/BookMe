{% extends 'base.html.twig' %}

{% block title %}Dodaj Nowego Pracownika - {{ service.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admin/employee/styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Dodaj Nowego Pracownika - {{ service.name }}</h2>
            <a href="{{ path('admin_employee_index', {'encodedName': encodedName}) }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Powrót do Listy Pracowników
            </a>
        </div>

        <div class="admin-section">
            <div class="admin-section-header">
                <h3 class="m-0"><i class="fas fa-plus me-2"></i>Nowy Pracownik</h3>
            </div>
            <div class="admin-section-body">
                {{ form_start(form) }}
                <div class="form-section">
                    <div class="form-section-title">Dane Osobowe</div>
                    <div class="mb-4">
                        {{ form_label(form.employee.service) }}
                        {{ form_widget(form.employee.service) }}
                        {{ form_errors(form.employee.service) }}
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            {{ form_label(form.user.firstName) }}
                            {{ form_widget(form.user.firstName) }}
                            {{ form_errors(form.user.firstName) }}
                        </div>
                        <div class="col-md-6 mb-4">
                            {{ form_label(form.user.lastName) }}
                            {{ form_widget(form.user.lastName) }}
                            {{ form_errors(form.user.lastName) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            {{ form_label(form.user.email) }}
                            {{ form_widget(form.user.email) }}
                            {{ form_errors(form.user.email) }}
                        </div>
                        <div class="col-md-6 mb-4">
                            {{ form_label(form.user.gender) }}
                            {{ form_widget(form.user.gender) }}
                            {{ form_errors(form.user.gender) }}
                        </div>
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.user.avatarUrl) }}
                        {{ form_widget(form.user.avatarUrl) }}
                        {{ form_errors(form.user.avatarUrl) }}

                        <div id="{{ form.user.avatarUrl.vars.id }}_preview_container" class="avatar-preview-container">
                            <img src="" id="avatar-preview" class="avatar-preview" alt="Podgląd zdjęcia">
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <div class="form-section-title">Dane Logowania</div>
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            {{ form_label(form.user.password.first) }}
                            {{ form_widget(form.user.password.first) }}
                            {{ form_errors(form.user.password.first) }}
                        </div>
                        <div class="col-md-6 mb-4">
                            {{ form_label(form.user.password.second) }}
                            {{ form_widget(form.user.password.second) }}
                            {{ form_errors(form.user.password.second) }}
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('admin_employee_index', {'encodedName': encodedName}) }}" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Anuluj
                    </a>
                    <button type="submit" class="btn btn-dark">
                        <i class="fas fa-save me-2"></i>Zapisz pracownika
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        const avatarConfig = {
            inputId: '{{ form.user.avatarUrl.vars.id }}',
            previewContainerId: '{{ form.user.avatarUrl.vars.id }}_preview_container'
        };
    </script>
    <script src="{{ asset('js/admin/employee/create.js') }}"></script>
{% endblock %}