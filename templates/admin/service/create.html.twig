{% extends 'base.html.twig' %}

{% block title %}Dodaj Nowy Serwis{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admin/service/styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <h2 class="mb-4 text-center">Dodaj Nowy Serwis</h2>

        <div class="admin-section">
            <div class="admin-section-header">
                <h3 class="m-0"><i class="fas fa-plus-circle me-2"></i>Nowy Serwis</h3>
            </div>
            <div class="admin-section-body">
                {{ form_start(form) }}
                <div class="step-indicator">
                    <div class="step active" data-step="1">
                        <div class="step-number">1</div>
                        <div class="step-title">Informacje</div>
                    </div>
                    <div class="step" data-step="2">
                        <div class="step-number">2</div>
                        <div class="step-title">Kontakt</div>
                    </div>
                    <div class="step" data-step="3">
                        <div class="step-number">3</div>
                        <div class="step-title">Zdjęcie</div>
                    </div>
                </div>

                <div class="form-steps">
                    <div class="form-step active" data-step="1">
                        <h4 class="mb-4">Informacje podstawowe</h4>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name) }}
                                {{ form_errors(form.name) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.serviceCategory) }}
                                {{ form_widget(form.serviceCategory) }}
                                {{ form_errors(form.serviceCategory) }}
                            </div>
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description) }}
                            {{ form_errors(form.description) }}
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('admin_service_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Powrót
                            </a>
                            <button type="button" class="btn btn-dark next-step" data-next="2">
                                Dalej <i class="fas fa-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>

                    <div class="form-step" data-step="2">
                        <h4 class="mb-4">Dane kontaktowe</h4>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.city) }}
                                {{ form_widget(form.city) }}
                                {{ form_errors(form.city) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.postalCode) }}
                                {{ form_widget(form.postalCode) }}
                                {{ form_errors(form.postalCode) }}
                            </div>
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.street) }}
                            {{ form_widget(form.street) }}
                            {{ form_errors(form.street) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.phoneNumber) }}
                            {{ form_widget(form.phoneNumber) }}
                            {{ form_errors(form.phoneNumber) }}
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <button type="button" class="btn btn-outline-secondary prev-step" data-prev="1">
                                <i class="fas fa-arrow-left me-2"></i>Wstecz
                            </button>
                            <button type="button" class="btn btn-dark next-step" data-next="3">
                                Dalej <i class="fas fa-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>

                    <div class="form-step" data-step="3">
                        <h4 class="mb-4">Zdjęcie główne</h4>
                        <div class="mb-3">
                            {{ form_label(form.imageUrl) }}
                            {{ form_widget(form.imageUrl) }}
                            {{ form_errors(form.imageUrl) }}
                        </div>

                        <div id="image-preview-container" class="text-center mt-4 d-none">
                            <h5 class="mb-3">Podgląd obrazu:</h5>
                            <img src="" alt="Podgląd obrazu" id="image-preview" class="preview-image">
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="button" class="btn btn-outline-secondary prev-step" data-prev="2">
                                <i class="fas fa-arrow-left me-2"></i>Wstecz
                            </button>
                            <button type="submit" class="btn btn-dark">
                                <i class="fas fa-save me-2"></i>Zapisz serwis
                            </button>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        const formConfig = {
            imageUrlId: '{{ form.imageUrl.vars.id }}',
            previewContainerId: 'image-preview-container'
        };
        const validationConfig = {
            steps: [1, 2, 3]
        };
    </script>
    <script src="{{ asset('js/admin/service/create.js') }}"></script>
{% endblock %}

{% block styles %}
    {{ parent() }}
    <style>
        .form-step {
            display: none;
            animation: fadeIn 0.5s;
        }

        .form-step.active {
            display: block;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
{% endblock %}