{% extends 'base.html.twig' %}

{% block title %}Dodaj Godziny Otwarcia - {{ service.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/admin/openinghours/styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Dodaj Godziny Otwarcia - {{ service.name }}</h2>
            <a href="{{ path('admin_opening_hours_index', {'encodedName': encodedName}) }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Powrót do Godzin Otwarcia
            </a>
        </div>

        <div class="admin-section">
            <div class="admin-section-header">
                <h3 class="m-0"><i class="fas fa-plus me-2"></i>Nowe Godziny Otwarcia</h3>
            </div>
            <div class="admin-section-body">
                {{ form_start(form) }}
                <div class="mb-4">
                    {{ form_label(form.dayOfWeek) }}
                    {{ form_widget(form.dayOfWeek) }}
                    {{ form_errors(form.dayOfWeek) }}
                    <small class="form-text text-muted">Wybierz dzień tygodnia, dla którego chcesz ustawić godziny otwarcia.</small>
                </div>

                <div class="form-check">
                    {{ form_widget(form.closed) }}
                    {{ form_label(form.closed) }}
                    {{ form_errors(form.closed) }}
                    <small class="form-text text-muted d-block mt-2">Zaznacz, jeśli serwis jest zamknięty w wybrany dzień.</small>
                </div>

                <div id="timeContainer" class="form-time-container">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.openingTime) }}
                            {{ form_widget(form.openingTime) }}
                            {{ form_errors(form.openingTime) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.closingTime) }}
                            {{ form_widget(form.closingTime) }}
                            {{ form_errors(form.closingTime) }}
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('admin_opening_hours_index', {'encodedName': encodedName}) }}" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Anuluj
                    </a>
                    <button type="submit" class="btn btn-dark">
                        <i class="fas fa-save me-2"></i>Zapisz godziny otwarcia
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        const formConfig = {
            closedId: '{{ form.closed.vars.id }}'
        };
    </script>
    <script src="{{ asset('js/admin/openinghours/create.js') }}"></script>
{% endblock %}