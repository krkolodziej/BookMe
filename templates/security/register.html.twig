{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/security.css') }}">
{% endblock %}

{% block body %}
    <div class="auth-container d-flex align-items-center justify-content-center py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="auth-card p-4 p-md-5">
                        <h2 class="auth-title text-center mb-4">Dołącz do nas!</h2>

                        {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        {{ form_errors(registrationForm) }}

                        {% if registrationForm.avatarUrl.vars.value %}
                            <div class="avatar-preview mb-4">
                                <img src="{{ registrationForm.avatarUrl.vars.value }}" alt="Avatar" id="avatar-preview-img">
                            </div>
                        {% endif %}

                        <div class="row mb-3">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label class="form-label fw-medium">{{ form_label(registrationForm.firstName) }}</label>
                                {{ form_widget(registrationForm.firstName, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Twoje imię'
                                    }
                                }) }}
                                <div class="text-danger mt-1">
                                    {{ form_errors(registrationForm.firstName) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">{{ form_label(registrationForm.lastName) }}</label>
                                {{ form_widget(registrationForm.lastName, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Twoje nazwisko'
                                    }
                                }) }}
                                <div class="text-danger mt-1">
                                    {{ form_errors(registrationForm.lastName) }}
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-medium">{{ form_label(registrationForm.email) }}</label>
                            {{ form_widget(registrationForm.email, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'twoj@email.com'
                                }
                            }) }}
                            <div class="text-danger mt-1">
                                {{ form_errors(registrationForm.email) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-medium">Płeć</label>
                            <div class="gender-selector">
                                <div class="gender-option" data-value="male">
                                    <i class="bi bi-gender-male"></i>
                                    <div>Mężczyzna</div>
                                </div>
                                <div class="gender-option" data-value="female">
                                    <i class="bi bi-gender-female"></i>
                                    <div>Kobieta</div>
                                </div>
                            </div>
                            {{ form_widget(registrationForm.gender, {'attr': {'class': 'd-none'}}) }}
                            <div class="text-danger mt-1">
                                {{ form_errors(registrationForm.gender) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-medium">{{ form_label(registrationForm.avatarUrl) }}</label>
                            {{ form_widget(registrationForm.avatarUrl, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'https://',
                                    'onchange': 'updateAvatarPreview(this)'
                                }
                            }) }}
                            <div class="text-danger mt-1">
                                {{ form_errors(registrationForm.avatarUrl) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-medium">{{ form_label(registrationForm.plainPassword.first) }}</label>
                            {{ form_widget(registrationForm.plainPassword.first, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': '••••••••'
                                }
                            }) }}
                            <div class="text-danger mt-1">
                                {{ form_errors(registrationForm.plainPassword.first) }}
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-medium">{{ form_label(registrationForm.plainPassword.second) }}</label>
                            {{ form_widget(registrationForm.plainPassword.second, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': '••••••••'
                                }
                            }) }}
                            <div class="text-danger mt-1">
                                {{ form_errors(registrationForm.plainPassword.second) }}
                            </div>
                        </div>

                        <button type="submit" class="btn btn-auth w-100 mb-3">
                            Zarejestruj się
                        </button>

                        <div class="text-center">
                            <span class="text-muted">Masz już konto? </span>
                            <a href="{{ path('app_login') }}" class="text-decoration-none text-primary">
                                Zaloguj się
                            </a>
                        </div>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const genderOptions = document.querySelectorAll('.gender-option');
            const genderInput = document.querySelector('select[name*="[gender]"], input[name*="[gender]"]');
            
            genderOptions.forEach(option => {
                option.addEventListener('click', function() {
                    const value = this.getAttribute('data-value');
                    
                    // Remove selected class from all options
                    genderOptions.forEach(opt => opt.classList.remove('selected'));
                    
                    // Add selected class to clicked option
                    this.classList.add('selected');
                    
                    // Set the value in form field
                    if (genderInput) {
                        genderInput.value = value;
                    }
                });
            });
        });

        function updateAvatarPreview(input) {
            const preview = document.getElementById('avatar-preview-img');
            if (input.value && preview) {
                preview.src = input.value;
            }
        }
    </script>
{% endblock %}